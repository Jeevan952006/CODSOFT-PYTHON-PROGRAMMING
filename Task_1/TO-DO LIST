import time

tasks = []

def pause():
    time.sleep(0.6)

def add_task():
    print("\nğŸ“ ADD A NEW TASK")
    task_name = input("What do you need to do? ğŸ‘‰ ").strip()

    if task_name:
        tasks.append({"task": task_name, "completed": False})
        print(f"âœ… Task added: {task_name}")
    else:
        print("âŒ Task cannot be empty!")

    pause()

def view_tasks():
    print("\nğŸ“‹ YOUR TO-DO LIST")
    print("-" * 30)

    if not tasks:
        print("ğŸ˜´ Nothing here yet. Add a task!")
    else:
        for i, task in enumerate(tasks, start=1):
            status = "âœ…" if task["completed"] else "â³"
            print(f"{i}. {status} {task['task']}")

        completed = sum(task["completed"] for task in tasks)
        print("\nğŸ“Š Progress:", f"{completed}/{len(tasks)} tasks completed")

    print("-" * 30)
    pause()

def mark_task_done():
    view_tasks()
    if not tasks:
        return

    try:
        num = int(input("ğŸ¯ Enter task number to complete: "))
        if 1 <= num <= len(tasks):
            tasks[num - 1]["completed"] = True
            print("ğŸ‰ Task completed! Great job!")
        else:
            print("âŒ Invalid task number.")
    except ValueError:
        print("âŒ Please enter a number.")

    pause()

def delete_task():
    view_tasks()
    if not tasks:
        return

    try:
        num = int(input("ğŸ—‘ï¸ Enter task number to delete: "))
        if 1 <= num <= len(tasks):
            removed = tasks.pop(num - 1)
            print(f"ğŸ§¹ Removed task: {removed['task']}")
        else:
            print("âŒ Invalid task number.")
    except ValueError:
        print("âŒ Please enter a number.")

    pause()

def main():
    print("===================================")
    print("âœ¨ PYTHON TO-DO LIST âœ¨")
    print("Stay focused. Stay productive. ğŸ’ª")
    print("===================================")

    while True:
        print("\nğŸ“Œ MENU")
        print("1ï¸âƒ£  Add Task")
        print("2ï¸âƒ£  View Tasks")
        print("3ï¸âƒ£  Mark Task as Done")
        print("4ï¸âƒ£  Delete Task")
        print("5ï¸âƒ£  Quit ğŸšª")

        choice = input("Choose (1-5): ").strip()

        if choice == "1":
            add_task()
        elif choice == "2":
            view_tasks()
        elif choice == "3":
            mark_task_done()
        elif choice == "4":
            delete_task()
        elif choice == "5":
            print("\nğŸ‘‹ Goodbye!")
            print("ğŸ”¥ Keep crushing your goals!")
            break
        else:
            print("âŒ Invalid choice. Try again!")

if __name__ == "__main__":
    main() how to upload the code in the github
