import random
import time

CHOICES = ["rock", "paper", "scissors"]
EMOJIS = {
    "rock": "ğŸª¨",
    "paper": "ğŸ“„",
    "scissors": "âœ‚ï¸"
}

TAUNTS = [
    "ğŸ˜ˆ The computer smirks confidently...",
    "ğŸ¤– Calculating the perfect move...",
    "ğŸ§  Big brain time!",
    "ğŸ² Let fate decide!",
    "ğŸ‘€ The computer is watching you..."
]

def countdown():
    for word in ["Rock...", "Paper...", "Scissors..."]:
        print(word)
        time.sleep(0.5)

def get_computer_choice():
    print(random.choice(TAUNTS))
    time.sleep(0.7)
    return random.choice(CHOICES)

def determine_winner(user, computer):
    if user == computer:
        return "tie"
    if (user == "rock" and computer == "scissors") or \
       (user == "scissors" and computer == "paper") or \
       (user == "paper" and computer == "rock"):
        return "user"
    return "computer"

def main():
    user_score = 0
    computer_score = 0
    win_streak = 0
    round_number = 1

    print("=======================================")
    print("ğŸ® WELCOME TO ROCK â€¢ PAPER â€¢ SCISSORS ğŸ®")
    print("=======================================")
    print("Beat the computer if you dare ğŸ˜")

    while True:
        print(f"\nğŸ”¥ ROUND {round_number} ğŸ”¥")
        user_input = input(
            "Choose Rock ğŸª¨, Paper ğŸ“„, Scissors âœ‚ï¸ (or 'q' to quit): "
        ).lower().strip()

        if user_input == "q":
            break

        if user_input not in CHOICES:
            print("âŒ Invalid choice! Try again.")
            continue

        countdown()

        computer_input = get_computer_choice()
        result = determine_winner(user_input, computer_input)

        print("\nğŸ†š SHOWDOWN ğŸ†š")
        print(f"You:      {EMOJIS[user_input]}  {user_input.upper()}")
        print(f"Computer: {EMOJIS[computer_input]}  {computer_input.upper()}")

        if result == "user":
            print("ğŸ‰ YOU WIN THIS ROUND!")
            user_score += 1
            win_streak += 1
        elif result == "computer":
            print("ğŸ’€ COMPUTER WINS THIS ROUND!")
            computer_score += 1
            win_streak = 0
        else:
            print("ğŸ˜ IT'S A TIE!")
            win_streak = 0

        if win_streak == 3:
            print("ğŸ”¥ğŸ”¥ THREE WINS IN A ROW! YOU'RE ON FIRE! ğŸ”¥ğŸ”¥")

        print(f"\nğŸ“Š SCOREBOARD")
        print(f"You: {user_score} | Computer: {computer_score}")

        play_again = input("\nPlay another round? (y/n): ").lower()
        if play_again != "y":
            break

        round_number += 1

    print("\n=======================================")
    print("ğŸ GAME OVER ğŸ")
    print(f"Final Score â†’ You: {user_score} | Computer: {computer_score}")

    if user_score > computer_score:
        print("ğŸ† YOU ARE THE ULTIMATE CHAMPION!")
    elif computer_score > user_score:
        print("ğŸ¤– The computer reigns supreme...")
    else:
        print("ğŸ¤ A perfectly balanced battle!")

    print("Thanks for playing! ğŸ‰")

if __name__ == "__main__":
    main()
